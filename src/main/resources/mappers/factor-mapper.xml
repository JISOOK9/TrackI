<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koo.tracki.db.FactorMapper">

	<update id="updateFactors" parameterType="com.koo.tracki.db.FactorDto">
		UPDATE factortable SET factor1=#{factor1}, factor2=#{factor2}, factor3=#{factor3}, factor4=#{factor4} WHERE uid=#{uid}
	</update>

	<select id="selectFactors" parameterType="String" resultType="com.koo.tracki.db.FactorDto">
		SELECT * FROM factortable WHERE uid=#{uid}
	</select>

</mapper>